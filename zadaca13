// Од тастатура се читаат непознат број позитивни цели броеви се додека не се внесе нешто различно од број. 
// За секој број треба да се пресмета збирот на цифрата со максимална вредност од претходно внесениот број  и сумата на цифрите на тековниот број 
// (за првиот внесен број се пресметува само сумата на неговите цифри). 
// За секој внесен број резултатот треба да се испечати во следниот формат:

// [број]: [сумата на цифрите на бројот + максималната цифра од претходниот број]
// 342: 9   //3+4+2
// 345: 16 //3+4+5+4
// 123: 11 //1+2+3+5
// 456: 18 //4+5+6+3
// --------------------------------------------------
#include <iostream>
using namespace std;

int main(){
    int num, min = 0, max = 0, sum = 0;
    while (cin>>num) {
        int i = num;
        sum = 0;
        while (i > 0) {
            sum = sum + (i % 10);
            i /= 10;
        }
        cout << num << ": " << sum + max << endl;
        max = 0;
        int x = num;
        while (x > 0) {
            min = x % 10;
            if (min > max) max = min;
            x /= 10;
        }
    }
    return 0;
}
